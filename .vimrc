"Line numbering
set number

" Line wrapping
set wrap

" Whitespace
set textwidth=0
set wrapmargin=0
set tabstop=4
set shiftwidth=4
set softtabstop=0
set noexpandtab

" File stats?
set ruler

" Encoding
set encoding=utf-8

" Blink instead of beeping
set visualbell

" Show stuff
set showmode
set showcmd
set laststatus=2

" Search highlighting
set hlsearch

" Color scheme
syntax enable
set background=dark

" Swap file location
set directory=$HOME/.vim/swapfiles//
set backupdir=$HOME/.vim/backups//
