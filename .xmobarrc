Config {
         font        = "xft:Noto Sans Mono:size=10:semibold:antialias=true"
       , additionalFonts = [ "xft:Noto Sans Mono CJK JP:size=11" ]
       , position    = TopW L 101
       , border      = TopB
       , borderColor = "#282C34"
       , bgColor     = "#282C34"
       , fgColor     = "#DFDFE4"
       , commands    = [ Run StdinReader

                       , Run Date     "%A %Y %B %_d %H:%M:%S" "date" 10

                       , Run Com      "/bin/bash" [ "-c", "~/.xmonad/xmobar/scripts/get-volume.sh"
                                                  ]  "myvolume" 10

                       , Run Com      "/bin/bash" [ "-c", "~/.xmonad/xmobar/scripts/get-brightness.sh"
                                                  ]  "mybrightness" 10

                       , Run Com      "/bin/bash" [ "-c", "~/.xmonad/xmobar/scripts/count-updates.sh"
                                                  ]  "myupdates" 36000

                       , Run Wireless "wlp4s0"    [ "--template" , "<essid>"
                                                  , "-L"         , "40"
                                                  , "-H"         , "70"
                                                  , "--low"      , "#E06C75"
                                                  , "--normal"   , "#E5C07B"
                                                  , "--high"     , "#98C379"
                                                  ] 50

                       , Run Battery              [ "--template" , "<left>%"
                                                  , "--L"        , "30"
                                                  , "--H"        , "70"
                                                  , "--low"      , "#E06C75"
                                                  , "--normal"   , "#E5C07B"
                                                  , "--high"     , "#98C379"
                                                  , "--" 
                                                       , "-o", "Battery"
                                                       , "-O", "Power"
                                                       , "-i", "Charged"
                                                  ] 50

                       , Run Weather  "CYYC"      [ "--template" , "<tempC>â„ƒ"
                                                  , "-L"         , "4"
                                                  , "-H"         , "20"
                                                  , "--normal"   , "#98C379"
                                                  , "--high"     , "#E06C75"
                                                  , "--low"      , "#61AFEF"
                                                  ] 18000

--                     , Run Network  "wlp4s0"    [ "--template" , "<tx>kb Up <rx>kb Down"
--                                                , "-L"         , "0"
--                                                , "-H"         , "32"
--                                                , "--low"      , "#E06C75"
--                                                , "--normal"   , "#E5C07B"
--                                                , "--high"     , "#98C379"
--                                                ] 10

--                     , Run Cpu                  [ "-L", "5"
--                                                , "-H", "50"
--                                                , "--normal", "#98C379"
--                                                , "--high", "#E06C75"
--                                                ] 10

--                     , Run Memory               [ "--template", "<usedratio>%"
--                                                ] 10

--                     , Run Swap                 [
--                                                ] 10

--                     , Run Com      "uname"     [ "-s", "-r"
--                                                ] "" 36000
		       ]

       , sepChar     = "%"
       , alignSep    = "}{"
       , template    = " %StdinReader% \
                      \} %date%\
                      \{Updates: %myupdates% \
                      \|<action=pulseaudio-ctl mute> <icon=.xmonad/xmobar/icons/volume.xpm/> %myvolume% </action>\
                      \|<action=~/.xmonad/xmobar/scripts/cycle-brightness.sh> <icon=.xmonad/xmobar/icons/brightness.xpm/> %mybrightness% </action>\
                      \| <icon=.xmonad/xmobar/icons/wifi.xpm/> %wlp4s0wi% \
                      \| %CYYC% \
--                    \| <icon=.xmonad/xmobar/icons/weather.xpm/> %CYYC% 
                      \| <icon=.xmonad/xmobar/icons/battery.xpm/> %battery% "
}
