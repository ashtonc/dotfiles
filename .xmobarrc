Config {

-- # Sonph One Half Dark
--
-- Background: #282C34
-- Foreground: #DFDFE4
-- Red:        #E06C75
-- Green:      #98C379
-- Yellow:     #E5C07B
-- Blue:       #61AFEF
-- Magenta:    #C678DD
-- Cyan:       #56B6C2

         font        = "xft:Noto Sans Mono:size=10:semibold:antialias=true"
       , position    = TopW L 100
       , border      = TopB
       , borderColor = "#272B34"
       , bgColor     = "#282C34"
       , fgColor     = "#DFDFE4"
       , commands    = [ Run Weather  "CYYC"      [ "-t", "<tempC>C"
                                                  , "-L", "4"
                                                  , "-H", "20"
                                                  , "--normal", "#98C379"
                                                  , "--high", "#E06C75"
                                                  , "--low", "#61AFEF"
                                                  ] 18000

                       , Run Network  "wlp4s0"    [ "-L","0","-H","32","--normal","#E5C07B","--high","#98C379","--low","#E06C75","-t","<tx>kb Up <rx>kb Down"
                                                  ] 10

                       , Run Wireless "wlp4s0"    [ "-L","40","-H","70","--normal","#E5C07B","--high","#98C379","--low","#E06C75","-t","<essid>"
                                                  ] 10

                       , Run Cpu                  [ "-L","5","-H","50","--normal","#98C379","--high","#E06C75"
                                                  ] 10

                       , Run Memory               [ "-t","Mem: <usedratio>%"
                                                  ] 10

                       , Run Swap                 [
                                                  ] 10
                       , Run Com      "uname"     [ "-s","-r"
                                                  ] "" 36000
                       , Run Com      "/bin/bash" [ "-c", "~/.xmonad/get-volume.sh"
                                                  ]  "myvolume" 10
                       , Run Com      "/bin/bash" [ "-c", "~/.xmonad/get-brightness.sh"
                                                  ]  "mybrightness" 10
                       , Run Date     "%A %Y %b %_d %H:%M:%S" "date" 10
                       , Run Battery              [ "--template" , "<left>%"
                                                  , "--Low"      , "30"
                                                  , "--High"     , "70"
                                                  , "--low"      , "#E06C75"
                                                  , "--normal"   , "#E5C07B"
                                                  , "--high"     , "#98C379"
                                                  , "--" 
                                                       , "-o", "Battery"
                                                       , "-O", "Power"
                                                       , "-i", "Charged"
                                                  ] 50
                       , Run StdinReader
		               ]
       , sepChar     = "%"
       , alignSep    = "}{"
       , template    = " %StdinReader% } <fc=#DFDFE4>%date%</fc> { Vol: %myvolume% | Light: %mybrightness% | Wifi: %wlp4s0wi% | Battery: %battery% | Temp: %CYYC% "
}
